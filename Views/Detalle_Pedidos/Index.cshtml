@model IEnumerable<tienda.Models.Detalle_Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Main Principal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pedidos.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Detalle_PedidoId" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Detalle_PedidoId" class="btn btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Detalle_PedidoId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
